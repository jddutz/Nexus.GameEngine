<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Define package sources -->
  <packageSources>
    <!-- Clear any inherited sources to ensure consistent behavior -->
    <clear />
    
    <!-- Official NuGet.org source for public packages -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    
    <!-- Local development source for NexusRealms packages -->
    <!-- This path will be dynamically updated by build scripts -->
    <add key="NexusRealms-Local" value="C:\Users\jddut\source\LocalNuGetRepo" />
  </packageSources>
  
  <!-- Package source mapping for better security and performance -->
  <packageSourceMapping>
    <!-- Map NexusRealms packages to local source -->
    <packageSource key="NexusRealms-Local">
      <package pattern="NexusRealms.*" />
    </packageSource>
    
    <!-- Map all other packages to NuGet.org -->
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>
  
  <!-- Global package management settings -->
  <config>
    <!-- Use the global packages folder (default behavior) -->
    <add key="globalPackagesFolder" value="" />
    
    <!-- Allow unsigned packages (for local development) -->
    <add key="signatureValidationMode" value="accept" />
    
    <!-- Disable automatic package restore on build (we'll do it explicitly) -->
    <add key="automatic-package-restore" value="false" />
  </config>
  
  <!-- Disable default push source to prevent accidental publishes -->
  <disabledPackageSources>
    <!-- Don't disable any sources by default -->
  </disabledPackageSources>
  
  <!-- Package installation settings -->
  <packageManagement>
    <add key="format" value="1" />
    <add key="disabled" value="False" />
  </packageManagement>
  
  <!-- Fallback package sources (if primary sources fail) -->
  <fallbackPackageFolders>
    <!-- Use system fallback folders -->
  </fallbackPackageFolders>
</configuration>





















