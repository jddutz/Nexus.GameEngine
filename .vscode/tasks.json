{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile-shaders",
            "type": "shell",
            "command": "${workspaceFolder}/src/GameEngine/Shaders/compile.bat",
            "windows": {
                "command": "${workspaceFolder}/src/GameEngine/Shaders/compile.bat"
            },
            "options": {
                "cwd": "${workspaceFolder}/src/GameEngine/Shaders"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "build-solution",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Nexus.GameEngine.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build",
            "dependsOn": ["compile-shaders"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "run-testapp",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/src/TestApp/TestApp.csproj"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": ["build-solution"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}